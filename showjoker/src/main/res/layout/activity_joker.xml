<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JokerActivity">

    <TextView
        android:id="@+id/tv_joker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_no_jokes_found"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_mock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="taran"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tv_joker"
        app:layout_constraintStart_toStartOf="@+id/tv_joker"
        app:layout_constraintTop_toBottomOf="@+id/tv_joker" />
</androidx.constraintlayout.widget.ConstraintLayout>